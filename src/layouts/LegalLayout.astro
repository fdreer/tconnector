---
// src/layouts/LegalLayout.astro
import Layout from '@/layouts/Layout.astro'

interface Props {
  title: string
  lastUpdated: Date
}

const {title, lastUpdated} = Astro.props
---

<Layout title={title}>
  <section class="legal-page">
    <div class="container">
      <header>
        <h1>{title}</h1>
        <p class="subtitle">
          Última actualización: {
            lastUpdated.toLocaleDateString('es-AR', {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
            })
          }
        </p>
      </header>
      <article class="legal-content">
        <slot />
      </article>
    </div>
  </section>
</Layout>

<style>
  /* Mueve todos los estilos de .legal-page, h1, .subtitle, etc. aquí */
  .legal-page {
    padding: 3rem 0;
    background-color: var(--color-light-gray);
  }
  .legal-page .container {
    max-width: 800px;
  }
  /* ... resto de los estilos ... */
</style>
